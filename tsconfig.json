{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/components/*": [
        "./src/app/components/*"
      ],
      "@/store/*": [
        "./src/app/store/*"
      ],
      "@/styles/*": [
        "./src/app/styles/*"
      ],
      "@/img/*": [
        "./src/app/img/*"
      ],
      "@/icons/*": [
        "./src/app/icons/*"
      ]
    },
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "declaration.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}